<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/editor_title_bg"
        android:foreground="@color/editor_title_fg"
        android:textColor="@color/editor_title_fg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="1.3dp"
        android:paddingTop="1.3dp"
        android:text="Filename"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2.7dp"
        android:layout_weight="1"
        android:background="@color/editor_bg"
        android:inputType="textMultiLine"
        android:textColor="@color/editor_fg"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/editor_buttons_bg"
        >

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/editor_button_save"
            android:drawableLeft="@drawable/cl_save"
            android:drawableStart="@drawable/cl_save"
            android:text="@string/editor_layout_save" >
        </Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/editor_button_cancel"
            android:drawableLeft="@drawable/cl_del"
            android:drawableStart="@drawable/cl_del"
            android:text="@string/editor_layout_cancel" >
        </Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>